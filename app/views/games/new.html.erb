<div class="container align-center">
  <h2>New Game</h2>
  <div class="col-6">
    <% @letters.each do |letter| %>
      <p class="btn btn-primary"><%= letter.capitalize %></p>
    <% end %>
  </div>
  <div class="col-6">
    <label for="Form-text" class="form-label">What is the longest word you can find?</label>
    <form action="score" method="post" data-turbo="false" class="input-group">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <input type="text" class="form-control" name="answer" value="<%= params[:answer] %>">
      <input type="submit" value="play" class="btn btn-outline-secondary">
    </form>
  </div>
</div>
